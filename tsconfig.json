{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": ["ES2022", "DOM"],
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "mocha", "vscode"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", ".vscode-test"]
}
